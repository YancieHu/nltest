<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionBarDivider">@null</item>
        <!-- <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item> -->
        <item name="android:actionBarWidgetTheme">@style/MyPopupMenuStyle</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyActionBarTabs" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/selector_news_tab_font_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyActionButtonStyle" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:background">@drawable/action_bar_button_bg</item>
    </style>
    
    <style name="MyPopupMenuStyle" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/a</item>
        <item name="android:dropDownListViewStyle">@style/b</item>
    </style>

    <style name="a" parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">@drawable/my_red</item>
    </style>
    
    <style name="b" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

</resources>